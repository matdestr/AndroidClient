<resources>

    <style name="AppTheme" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AppTheme.Base.Black" parent="AppTheme.Base.Dark">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AppTheme.Base.Dark" parent="AppTheme.Base">
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="colorControlNormal">@color/colorTextLight</item>
        <item name="colorControlActivated">@color/colorTextLight</item>
        <item name="colorControlHighlight">@color/colorTextLight</item>
    </style>

    <style name="AppTheme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Material" />

    <style name="Material.Button" parent="Material">
        <item name="android:paddingLeft">@dimen/material_content_space</item>
        <item name="android:paddingRight">@dimen/material_content_space</item>
        <item name="android:layout_marginLeft">@dimen/material_content_space</item>
        <item name="android:layout_marginRight">@dimen/material_content_space</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Material.Button.Raised" parent="Material.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="Material.Button.Raised.White" parent="Material.Button.Raised">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Material.Button.Flat" parent="Material.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Material.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">@dimen/material_content_space</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Material.TextInputLayout.Hint" parent="Material.TextInputLayout">
        <item name="android:textColorHint">@color/colorTextLight</item>
    </style>

    <style name="Material.TextInputLayout.Error" parent="Material.TextInputLayout">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Material.TextInputLayout.Dark" parent="Material.TextInputLayout">
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="Material.TextInputLayout.Hint.Dark" parent="Material.TextInputLayout.Hint">
        <item name="android:textColorHint">@color/colorTextDark</item>
    </style>

    <style name="Material.TextInputLayout.Error.Dark" parent="Material.TextInputLayout.Error">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Material.TextInputLayout.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/form_text_size</item>
    </style>

    <style name="Material.Drawer" />

    <style name="Material.Drawer.Header" parent="Material.Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/material_margin_default</item>
        <item name="android:paddingRight">@dimen/material_margin_default</item>
        <item name="android:paddingTop">@dimen/status_bar_height</item>
    </style>

    <style name="Material.Drawer.Header.Subtitle" parent="Material.Drawer">
        <item name="android:paddingTop">@dimen/material_content_space</item>
        <item name="android:paddingBottom">@dimen/material_content_space</item>
    </style>

    <style name="Material.Drawer.Header.Subtitle.Text" parent="Material.Drawer">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="Material.Drawer.Header.Subtitle.PrimaryText" parent="Material.Drawer.Header.Subtitle.Text">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Material.Drawer.Header.Subtitle.SecondaryText" parent="Material.Drawer.Header.Subtitle.Text">
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Cando" />


    <style name="Cando.Content.Data" parent="Cando">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Cando.Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/profile_content_height</item>
    </style>

    <style name="Cando.Header.Title" parent="Cando.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Cando.Header.Icon" parent="Cando.Header">
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/profile_icon_padding</item>
    </style>


    <style name="SessionListItemCardText" parent="android:style/TextAppearance.Small">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
