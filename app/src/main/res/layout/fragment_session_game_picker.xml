<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/material_margin_default">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/colorAccent"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_image" />

            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_image"
                android:layout_margin="@dimen/material_margin_default"
                tools:text="description of this specific card is placed below the image shown above." />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_pick_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/material_margin_default"
                android:src="@drawable/ic_action_accept"
                app:backgroundTint="@color/colorPrimaryDark" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_next_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/material_margin_default"
                android:src="@drawable/ic_keyboard_arrow_left"
                app:fabSize="mini" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_previous_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/material_margin_default"
                android:src="@drawable/ic_keyboard_arrow_right"
                app:fabSize="mini" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>