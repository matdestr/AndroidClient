<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_signin_left"
        android:paddingRight="@dimen/padding_signin_right"
        android:paddingTop="@dimen/padding_signin_top">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/signin_layout_heigt"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/signin_margin_bottom_imageview"
            android:src="@drawable/cando_logo" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/signin_margin_textinputlayout"
            android:layout_marginTop="@dimen/signin_margin_textinputlayout"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/signup_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/signin_text_size"
                android:hint="@string/sign_up_username_hint"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/signin_margin_textinputlayout"
            android:layout_marginTop="@dimen/signin_margin_textinputlayout"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/signup_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/signin_text_size"
                android:hint="@string/sign_up_firstname_hint"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/signin_margin_textinputlayout"
            android:layout_marginTop="@dimen/signin_margin_textinputlayout"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/signup_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/signin_text_size"
                android:hint="@string/sign_up_lastname_hint"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/signin_margin_textinputlayout"
            android:layout_marginTop="@dimen/signin_margin_textinputlayout"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/signin_text_size"
                android:hint="@string/sign_up_email_hint"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/signin_margin_textinputlayout"
            android:layout_marginTop="@dimen/signin_margin_textinputlayout"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTextLight"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/signin_text_size"
                android:hint="@string/sign_up_password_hint"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/signin_margin_textinputlayout"
            android:layout_marginTop="@dimen/signin_margin_textinputlayout"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/signup_verifypassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTextLight"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/signin_text_size"
                android:hint="@string/sign_up_verify_password_hint"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_sign_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/signin_margin_button"
            android:layout_marginTop="@dimen/signin_margin_button"
            android:padding="@dimen/signin_padding_button"
            android:backgroundTint="@color/colorTextLight"
            android:textSize="@dimen/signin_text_size"
            android:textColor="@color/colorPrimary"
            android:text="@string/sign_up_button" />

        <TextView
            android:id="@+id/link_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/signin_margin_bottom_imageview"
            android:gravity="center"
            android:text="@string/sign_up_already_member"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/signin_text_size_small" />

    </LinearLayout>


</ScrollView>