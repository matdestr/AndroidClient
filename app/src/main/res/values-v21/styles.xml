<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:alertDialogTheme">@style/Dialog</item>
    </style>

    <style name="AppTheme.Base.Dark" parent="AppTheme">
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="colorControlNormal">@color/colorTextLight</item>
        <item name="colorControlActivated">@color/colorTextLight</item>
        <item name="colorControlHighlight">@color/colorTextLight</item>
    </style>


    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
</resources>